<?xml version='1.0' encoding='utf-8'?> 
<Context displayName="JSP Servlet Example" docBase="example" path="/example" reloadable="true">
  <!--                  SQLServer                  -->
  <Resource name="jdbc/customerMS" type="javax.sql.DataSource"
      username="sa" password="1234"
      driverClassName="com.microsoft.sqlserver.jdbc.SQLServerDriver"
      url="jdbc:sqlserver://127.0.0.1:1433;DatabaseName=JSPDB"
      Active="8"
      maxIdle="4"
      maxWait="5000"
  />   
  <!--                     MySQL                   -->
  <Resource name="jdbc/customer" type="javax.sql.DataSource"
      username="root" password="password"
      driverClassName="com.mysql.jdbc.Driver"
      url="jdbc:mysql://localhost:3306/jspdb?useUnicode=true&amp;characterEncoding=utf8"
      maxActive="8"
      maxIdle="4"
      maxWait="5000"
  />   
   <Realm className="org.apache.catalina.realm.MemoryRealm" />
</Context>
